@page
@model MegaDeskWeb.Pages.DeskQuotes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="edit_page_container">
    <h2>Edit Quote</h2>
</div>

<div class="edit_page_container">
    <form method="post" class="myForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="DeskQuote.DeskQuoteId" />
        <div class="form-group">
            <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
            <input asp-for="DeskQuote.CustomerName" class="form-control" />
            <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DeskQuote.RushOrderOption" class="control-label"></label>
            <select asp-for="DeskQuote.RushOrderOptionId" class="form-control" asp-items="ViewBag.RushOrderOptionId"></select>
        </div>
        <div class="form-group">
            <label asp-for="DeskQuote.Desk.Width" class="control-label"></label>
            <input asp-for="DeskQuote.Desk.Width" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DeskQuote.Desk.Depth" class="control-label"></label>
            <input asp-for="DeskQuote.Desk.Depth" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DeskQuote.Desk.NumberOfDrawers" class="control-label"></label>
            <input asp-for="DeskQuote.Desk.NumberOfDrawers" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DeskQuote.Desk.DesktopSurfaceMaterial" class="control-label"></label>
            <select asp-for="DeskQuote.Desk.DesktopSurfaceMaterialId" class="form-control" asp-items="ViewBag.DesktopSurfaceMaterialId"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

    <div>
        <a asp-page="./Index"><span class="glyphicon glyphicon-step-backward"></span>Back</a>
    </div>
</div>
<hr class="bottomLine"/>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
